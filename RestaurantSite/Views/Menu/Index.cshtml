@using RestaurantSite.Models
@model IEnumerable<Menu>

@{
    ViewBag.Title = "Index";
}

<h2>MENU</h2>
<p>We are using premium quality ingredients to deliver the best experience.</p>
<ul>
    @foreach (Menu menu in Model)
    {
        if (menu.Name == "Beverage")
        {
            <li><a href="/Menu/BrowseBeverage?menu=@menu.Name">@menu.Name</a></li>
        }
        else
        {
            <li><a href="/Menu/BrowseFood?menu=@menu.Name">@menu.Name</a></li>
        }

    }
</ul>