@using RestaurantSite.Models

@model Beverage

@{
    LeComptoirContext menuDB = new LeComptoirContext();
    ViewBag.Title = "Beverage";
}

<h2>@Model.Name</h2><br />
@foreach (var item in Model.BevItems)
{
    <div class="col-md-3 text-center">
        <a href="@Url.Action("BevDetails", new { id = item.BevItemID })"><img class="img-rounded" src="@menuDB.BevItems.Find(item.BevItemID).Image" height="200" /></a>
        <h5>@menuDB.BevItems.Find(item.BevItemID).Name</h5>
    </div>
}