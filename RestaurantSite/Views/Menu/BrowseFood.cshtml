@using RestaurantSite.Models
@model Food

@{
    LeComptoirContext menuDB = new LeComptoirContext();
    ViewBag.Title = "BrowseFood";
}
<!--
    File: BrowseFood.cshtml
    Author: Lucy Kang
    Website: Le Comptoir Restaurant & Bar
    Description: This page displays food items by its category.
-->

<h2>@Model.Name</h2><hr /><br />
@foreach (var item in Model.FoodItems)
{
    <div class="col-md-4 text-center">
        <a href="@Url.Action("FoodDetails", new { id = item.FoodItemID })"><img class="img-rounded" src="@menuDB.FoodItems.Find(item.FoodItemID).Image" width="300" /></a>
        <h5><strong>@menuDB.FoodItems.Find(item.FoodItemID).Name</strong></h5>
        <p>
            @menuDB.FoodItems.Find(item.FoodItemID).ShortDescription <br />
            $ @menuDB.FoodItems.Find(item.FoodItemID).Price
        </p>
    </div>
}