@model RestaurantSite.Models.BevItem

@{
    ViewBag.Title = "BevDetails";
}
<!--
    File: BevDetails.cshtml
    Author: Lucy Kang
    Website: Le Comptoir Restaurant & Bar
    Description: This page displays details of beverage item selected.
-->

<h2>@Model.Name</h2>
<div class="row">
    <div class="col-md-6">
        <div class="text-center">
            <img src="@Model.Image" height="500" /><br />
        </div>
    </div>
    <div class="col-md-6">
        <br />
        <div class="row">
            <h5><strong>Category: @Model.Beverage.Name</strong></h5>
            <p>
                @Model.LongDescription <br />
                <br />
                Price: $@Model.Price <br />
            </p>
        </div>
        <div class="row text-center back-row">
            <a class="btn btn-default" href="@Url.Action("BrowseBeverage", new { href = Request.UrlReferrer, id = Model.BeverageID }))">Back</a>
        </div>
    </div>
</div>
